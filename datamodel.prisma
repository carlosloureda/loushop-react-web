enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique # @ are called GraphQL directives
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
  cart: [CartItem!]!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  user: User!
  # createdAt: DateTime!
  # updatedAt: DateTime!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Item! #relationshipt to Item
  user: User! #relationshipt to User
}
