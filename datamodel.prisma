enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique # @ are called GraphQL directives
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  # createdAt: DateTime!
  # updatedAt: DateTime!
  # user: User!
}
